<form action="birth" method="post">
  Birth ID: <input type="text" name="birthId"><br>
  Hospital Name:
  <select name="hospitalName">
    <option>Apollo</option><option>Columbia</option><option>Govt Hospital</option>
  </select><br>
  Father Name: <input type="text" name="father"><br>
  Mother Name: <input type="text" name="mother"><br>
  Date and Time: <input type="datetime-local" name="dob"><br>
  Doctor Name: <input type="text" name="doctor"><br>
  Nurse Name: <input type="text" name="nurse"><br>
  Hospital Type:
  <select name="hospitalType">
    <option>Private</option><option>Government</option>
  </select><br>
  <input type="submit" value="Submit">
</form>
